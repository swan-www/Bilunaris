{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    
    "version": "2.0.0",
    "command": "",
    "args": [],
    "tasks": [
        {
            "label": "zig-debug-win64",
            "type": "shell",
            "command": "${fileWorkspaceFolder}/toolchain/common/ziglang/zig.exe build -Dtarget=x86_64-windows-msvc -Doptimize=Debug",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }        
        },
        {
            "label": "zig-release-win64",
            "type": "shell",
            "command": "${fileWorkspaceFolder}/toolchain/common/ziglang/zig.exe build -Dtarget=x86_64-windows-msvc -Doptimize=ReleaseFast",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }        
        }
    ],
    "problemMatchers": [
        "$zig"
    ],
}